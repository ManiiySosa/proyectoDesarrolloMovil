<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgEditarFoto"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:paddingTop="@dimen/cinco"
            android:src="@drawable/avatar"
            android:layout_margin="@dimen/diez"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/etEditarNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/cinco"
            android:background="@color/white"
            android:drawableStart="@drawable/ic_person"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:hint="Edita tu nombre usuario"
            android:inputType="textPersonName"
            android:paddingLeft="10sp"
            android:textSize="@dimen/sizeInputs"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/btn_editarDatosUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardar cambios"
            android:layout_gravity="center"
            android:drawableEnd="@drawable/ic_save"/>

    </LinearLayout>

</RelativeLayout>