<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvPerfil"
    android:padding="@dimen/diez"
    android:layout_margin="@dimen/diez"
    android:backgroundTint="@color/white"
    app:cardElevation="@dimen/cinco"
    app:cardCornerRadius="@dimen/quince">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgCvPerfil"
            android:layout_width="120sp"
            android:layout_height="125sp"
            android:layout_margin="@dimen/quince"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/cinco"
            android:layout_marginRight="@dimen/diez">

            <TextView
                android:id="@+id/tvCvNombrePerfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/texto_tvNombrePerfil"
                android:textSize="@dimen/sizeTxt"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:padding="@dimen/cinco"
                android:textColor="@color/blacktxt"
                android:layout_marginTop="@dimen/cinco"
                android:layout_marginBottom="@dimen/cinco"
                />

            <TextView
                android:id="@+id/tvCvCiudad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_tvCvCiudad"
                android:textColor="@color/blacktxt"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textSize="@dimen/sizeTxt"
                android:layout_marginBottom="@dimen/cinco"
            />

            <TextView
                android:id="@+id/tvCvCorreo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_tvCvCorreo"
                android:textColor="@color/blacktxt"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textSize="@dimen/sizeTxt"
                android:layout_marginBottom="@dimen/cinco"/>

            <Button
                android:id="@+id/btnCvVerPerfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/texto_btnVerPerfil"
                android:drawableEnd="@drawable/ic_eye"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
